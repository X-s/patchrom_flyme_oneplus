    </com.oneplus.widget.preference.OPPreferenceCategory>
    <com.android.settings_ex.ui.OPPreferenceDivider android:key="preference_divider_line" />
    <com.oneplus.widget.preference.OPPreferenceCategory android:title="@string/managed_profile_location_category" android:key="managed_profile_location_category">
        <com.oneplus.widget.preference.OPPreference android:persistent="false" android:enabled="false" android:title="@string/managed_profile_location_switch_title" android:selectable="false" android:key="managed_profile_location_switch" android:summary="@string/managed_profile_location_switch_lockdown" />
    </com.oneplus.widget.preference.OPPreferenceCategory>
    <com.oneplus.widget.preference.OPPreferenceCategory android:title="@string/location_category_recent_location_requests" android:key="recent_location_requests" />
    <com.oneplus.widget.preference.OPPreferenceCategory android:title="@string/location_category_location_services" android:key="location_services" />
</PreferenceScreen>