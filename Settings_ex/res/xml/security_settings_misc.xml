<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/security_settings_title"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/oneplus_app_permission_manage" android:key="application_permisstion_category">
        <Preference android:title="@string/clean_background_title" android:key="clean_background" />
        <Preference android:title="@string/auto_application_title" android:key="auto_application" />
        <Preference android:title="@string/application_notification_title" android:key="application_notification" android:fragment="com.android.settings_ex.notification.NotificationAppList" />
        <Preference android:title="@string/application_permisstion_manage_title" android:key="application_permisstion_manage" android:fragment="com.android.settings_ex.notification.NotificationAccessSettings" />
    </PreferenceCategory>
    <com.android.settings_ex.ui.OPPreferenceDivider android:key="preference_divider_line" />
    <PreferenceCategory android:persistent="false" android:title="@string/sim_lock_settings_title" android:key="sim_lock">
        <Preference android:persistent="false" android:title="@string/sim_lock_settings_category" android:key="sim_lock_settings">
            <intent android:targetPackage="com.android.settings_ex" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings_ex.IccLockSettings" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:persistent="false" android:title="@string/security_passwords_title" android:key="show_password_category">
        <SwitchPreference android:persistent="false" android:title="@string/show_password" android:key="show_password" />
    </PreferenceCategory>
    <PreferenceCategory android:persistent="false" android:title="@string/device_admin_title" android:key="device_admin_category">
        <Preference android:persistent="false" android:title="@string/manage_device_admin" android:key="manage_device_admin" android:summary="@string/manage_device_admin_summary" android:fragment="com.android.settings_ex.DeviceAdminSettings" />
        <Preference android:persistent="false" android:title="@string/app_ops_settings" android:key="app_ops_summary" android:summary="@string/app_ops_settings_summary" android:fragment="com.android.settings_ex.applications.AppOpsSummary" />
    </PreferenceCategory>
    <SwitchPreference android:persistent="false" android:title="@string/install_applications" android:key="toggle_install_applications" android:summaryOn="@string/install_unknown_applications" android:summaryOff="@string/install_unknown_applications" />
    <com.android.settings_ex.ui.OPPreferenceDivider android:key="preference_divider_line" />
    <PreferenceCategory android:persistent="false" android:title="@string/credentials_title" android:key="credentials_management">
        <Preference android:persistent="false" android:title="@string/credential_storage_type" android:key="credential_storage_type" style="?android:attr/preferenceInformationStyle" />
        <Preference android:persistent="false" android:title="@string/trusted_credentials" android:key="trusted_credentials" android:summary="@string/trusted_credentials_summary" android:fragment="com.android.settings_ex.TrustedCredentialsSettings" />
        <Preference android:persistent="false" android:title="@string/credentials_install" android:key="credentials_install" android:summary="@string/credentials_install_summary">
            <intent android:targetPackage="com.android.certinstaller" android:action="android.credentials.INSTALL" android:targetClass="com.android.certinstaller.CertInstallerMain" />
        </Preference>
        <Preference android:persistent="false" android:title="@string/credentials_reset" android:key="credentials_reset" android:summary="@string/credentials_reset_summary">
            <intent android:targetPackage="com.android.settings_ex" android:action="com.android.credentials.RESET" android:targetClass="com.android.settings_ex.CredentialStorage" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:persistent="false" android:title="@string/advanced_security_title" android:key="advanced_security">
        <Preference android:persistent="false" android:title="@string/manage_trust_agents" android:key="manage_trust_agents" android:summary="@string/manage_trust_agents_summary" android:fragment="com.android.settings_ex.TrustAgentSettings" />
        <PreferenceScreen android:title="@string/screen_pinning_title" android:key="screen_pinning_settings" android:summary="@string/switch_off_text" android:fragment="com.android.settings_ex.ScreenPinningSettings" />
        <Preference android:title="@string/usage_access_title" android:key="usage_access" android:fragment="com.android.settings_ex.UsageAccessSettings" />
    </PreferenceCategory>
    <SwitchPreference android:title="@string/application_permisstion_control_title" android:key="application_permisstion_control" />
    <Preference android:title="@string/others_applications_permission_settings" android:key="others_application_permisstion_settings" android:fragment="com.android.settings_ex.applications.ManageApplications" />
</PreferenceScreen>