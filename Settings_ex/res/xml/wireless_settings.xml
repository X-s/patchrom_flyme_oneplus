<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/radio_controls_title"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.settings_ex">
    <SwitchPreference android:persistent="false" android:title="@string/airplane_mode" android:key="toggle_airplane" android:disableDependentsState="true" />
    <com.android.settings_ex.AppListPreference android:persistent="false" android:title="@string/sms_application_title" android:key="sms_application" android:summary="%s" settings:keywords="@string/keywords_more_default_sms_app" />
    <SwitchPreference android:persistent="false" android:title="@string/nfc_quick_toggle_title" android:key="toggle_nfc" android:summary="@string/nfc_quick_toggle_summary" />
    <PreferenceScreen android:title="@string/android_beam_settings_title" android:key="android_beam_settings" android:fragment="com.android.settings_ex.nfc.AndroidBeam" />
    <com.android.settings_ex.ui.OPPreferenceDivider android:key="preference_divider_line" />
    <PreferenceScreen android:title="@string/vpn_settings_title" android:key="vpn_settings" android:fragment="com.android.settings_ex.vpn2.VpnSettings" />
    <PreferenceScreen android:title="@string/oneplus_hotspot_tether_title" android:key="tether_settings" android:fragment="com.android.settings_ex.TetherSettings" />
    <PreferenceScreen android:title="@string/data_usage_summary_title" android:key="data_usage_settings" android:fragment="com.android.settings_ex.DataUsageSummary" />
    <Preference android:title="@string/oneplus_sim_application_settings_title" android:key="sim_application_settings" />
    <PreferenceScreen android:title="@string/network_settings_title" android:key="mobile_network_settings" android:dependency="toggle_airplane" settings:keywords="@string/keywords_more_mobile_networks">
        <intent android:targetPackage="com.android.phone" android:action="android.intent.action.MAIN" android:targetClass="com.android.phone.MobileNetworkSettings" />
    </PreferenceScreen>
    <Preference android:persistent="false" android:title="@string/manage_mobile_plan_title" android:key="manage_mobile_plan" />
    <PreferenceScreen android:title="@string/wimax_settings" android:key="wimax_settings">
        <intent android:targetPackage="com.android.settings_ex.wimax" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings_ex.wimax.WimaxSettings" />
    </PreferenceScreen>
    <SwitchPreference android:persistent="false" android:title="@string/nsd_quick_toggle_title" android:key="toggle_nsd" android:summary="@string/nsd_quick_toggle_summary" />
    <PreferenceScreen android:title="@string/proxy_settings_title" android:key="proxy_settings" android:fragment="com.android.settings_ex.ProxySelector" />
    <PreferenceScreen android:title="@string/cell_broadcast_settings" android:key="cell_broadcast_settings">
        <intent android:targetPackage="com.android.cellbroadcastreceiver" android:action="android.intent.action.MAIN" android:targetClass="com.android.cellbroadcastreceiver.CellBroadcastSettings" />
    </PreferenceScreen>
</PreferenceScreen>