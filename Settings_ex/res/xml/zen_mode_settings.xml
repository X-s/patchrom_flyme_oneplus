<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/zen_mode_settings_title" android:key="zen_mode_settings"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.android.settings_ex.notification.DropDownPreference android:persistent="false" android:title="@string/zen_mode_option_title" android:key="zen_mode" />
    <SwitchPreference android:title="@string/oneplus_zen_mode_enable_title" android:key="zen_mode_enable" android:summary="@string/oneplus_zen_mode_enable_summary" />
    <PreferenceCategory android:title="@string/oneplus_zen_mode_settings_title" android:key="important">
        <Preference android:title="@string/oneplus_agree_following_incall" android:key="spec_incall_settings" android:fragment="com.oneplus.settings.notification.OPSpecIncallSettings" />
        <SwitchPreference android:title="@string/oneplus_repeat_incaller_unlimit_enable_title" android:key="repeat_incaller_unlimit_enable" android:summary="@string/oneplus_repeat_incaller_unlimit_enable_summary" />
        <Preference android:title="@string/oneplus_favourite_contacts" android:key="favourite_contacts_settings" />
        <SwitchPreference android:persistent="false" android:title="@string/app_notifications_title" android:key="events" android:summary="@string/oneplus_app_notifications_summary" android:switchTextOn="" android:switchTextOff="" />
        <SwitchPreference android:persistent="false" android:title="@string/zen_mode_calls" android:key="calls" android:switchTextOn="" android:switchTextOff="" />
        <SwitchPreference android:persistent="false" android:title="@string/zen_mode_messages" android:key="messages" android:switchTextOn="" android:switchTextOff="" />
        <com.android.settings_ex.notification.DropDownPreference android:persistent="false" android:title="@string/zen_mode_from" android:key="starred" />
        <Preference android:textAppearance="?android:textAppearanceSmall" android:textColor="?android:colorForegroundInverse" android:title="" android:selectable="false" android:key="alarm_info" android:summary="@string/zen_mode_alarm_info" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/zen_mode_downtime_category" android:key="downtime">
        <Preference android:persistent="false" android:title="@string/zen_mode_downtime_days" android:key="days" />
        <com.android.settings_ex.notification.DropDownPreference android:persistent="false" android:title="@string/zen_mode_downtime_mode_title" android:key="downtime_mode" android:order="100" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/zen_mode_automation_category" android:key="automation">
        <Preference android:persistent="false" android:title="@string/zen_mode_entry_conditions_title" android:key="entry" />
        <Preference android:persistent="false" android:title="@string/manage_condition_providers" android:key="manage_condition_providers" android:fragment="com.android.settings_ex.notification.ConditionProviderSettings" />
    </PreferenceCategory>
</PreferenceScreen>