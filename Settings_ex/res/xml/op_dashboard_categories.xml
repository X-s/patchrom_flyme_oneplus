<?xml version="1.0" encoding="utf-8"?>
<dashboard-categories
  xmlns:android="http://schemas.android.com/apk/res/android">
    <dashboard-category android:id="@id/wireless_section" android:title="@string/header_category_wireless_networks">
        <dashboard-tile android:icon="@drawable/ic_settings_wireless" android:id="@id/wifi_settings" android:title="@string/wifi_settings_title" android:fragment="com.android.settings_ex.wifi.WifiSettings" />
        <dashboard-tile android:icon="@drawable/ic_settings_bluetooth2" android:id="@id/bluetooth_settings" android:title="@string/bluetooth_settings_title" android:fragment="com.android.settings_ex.bluetooth.BluetoothSettings" />
        <dashboard-tile android:icon="@drawable/ic_settings_sim" android:id="@id/sim_settings" android:title="@string/oneplus_sim_settings_title">
            <intent android:action="com.android.phone.OPSimSettings" />
        </dashboard-tile>
        <dashboard-tile android:id="@id/operator_settings" android:fragment="com.android.settings_ex.WirelessSettings">
            <intent android:action="com.android.settings_ex.OPERATOR_APPLICATION_SETTING" />
        </dashboard-tile>
        <dashboard-tile android:icon="@drawable/ic_settings_data_usage" android:id="@id/mobile_network_settings" android:title="@string/mobile_network_settings_title">
            <intent android:action="com.android.phone.MobileNetworkSettings" />
        </dashboard-tile>
        <dashboard-tile android:icon="@drawable/ic_settings_hotspot" android:id="@id/tether_settings" android:title="@string/tether_settings_title_all" android:fragment="com.android.settings_ex.TetherSettings" />
        <dashboard-tile android:icon="@drawable/ic_settings_sim" android:id="@id/simcard_manage_settings" android:title="@string/simcard_manage_settings_title" android:fragment="com.android.settings_ex.TetherSettings" />
        <dashboard-tile android:icon="@drawable/ic_settings_vpn" android:id="@id/vpn_settings" android:title="@string/vpn_settings_title" android:fragment="com.android.settings_ex.vpn2.VpnSettings" />
        <dashboard-tile android:icon="@drawable/ic_settings_more" android:id="@id/wireless_settings" android:title="@string/radio_controls_title" android:fragment="com.android.settings_ex.WirelessSettings" />
    </dashboard-category>
    <dashboard-category android:id="@id/device_section" android:title="@string/header_display_sound_settings_title">
        <dashboard-tile android:icon="@drawable/ic_settings_display" android:id="@id/display_settings" android:title="@string/display_settings" android:fragment="com.android.settings_ex.DisplaySettings" />
        <dashboard-tile android:icon="@drawable/ic_settings_date_time" android:id="@id/date_time_settings" android:title="@string/date_and_time_settings_title" android:fragment="com.android.settings_ex.DateTimeSettings" />
        <dashboard-tile android:icon="@drawable/ic_settings_notifications" android:id="@id/notification_settings" android:title="@string/oneplus_notification_settings" android:fragment="com.oneplus.settings.notification.OPNotificationSettings" />
        <dashboard-tile android:icon="@drawable/ic_settings_zenmode" android:id="@id/zen_mode" android:title="@string/oneplus_zen_mode_settings_title" android:fragment="com.android.settings_ex.notification.ZenModeSettings" />
        <dashboard-tile android:id="@id/manufacturer_settings" android:fragment="com.android.settings_ex.WirelessSettings">
            <intent android:action="com.android.settings_ex.MANUFACTURER_APPLICATION_SETTING" />
        </dashboard-tile>
    </dashboard-category>
    <dashboard-category android:id="@id/private_safety_section" android:title="@string/private_safety_title">
        <dashboard-tile android:icon="@drawable/ic_settings_location" android:id="@id/location_settings" android:title="@string/location_settings_title" android:fragment="com.android.settings_ex.location.LocationSettings" />
        <dashboard-tile android:icon="@drawable/ic_settings_fingerprint" android:id="@id/fingerprint_password_manage_settings" android:title="@string/oneplus_fingerprint_password_manage_title" android:fragment="com.android.settings_ex.FingerprintAndPWD" />
        <dashboard-tile android:icon="@drawable/ic_settings_applications_permisstion" android:id="@id/security_settings" android:title="@string/applications_permission_settings" android:fragment="com.android.settings_ex.SecuritySettings" />
        <dashboard-tile android:icon="@drawable/ic_settings_backup" android:id="@id/sim_manage_settings" android:title="@string/sim_manage_settings_title">
            <intent android:targetPackage="com.android.settings_ex" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings_ex.IccLockSettings" />
        </dashboard-tile>
        <dashboard-tile android:icon="@drawable/ic_settings_accounts" android:id="@id/account_settings" android:title="@string/account_settings_title" android:fragment="com.android.settings_ex.accounts.AccountSettings" />
    </dashboard-category>
    <dashboard-category android:id="@id/system_section" android:title="@string/header_other_settings_title">
        <dashboard-tile android:icon="@drawable/ic_settings_cn_language" android:id="@id/language_settings" android:title="@string/language_settings" android:fragment="com.android.settings_ex.inputmethod.InputMethodAndLanguageSettings" />
        <dashboard-tile android:icon="@drawable/op_ic_settings_development" android:id="@id/advance_development_settings" android:title="@string/advance_dev_settings_title" android:fragment="com.oneplus.settings.OPAdvanceDevSettings" />
        <dashboard-tile android:icon="@drawable/oneplus_noviceguide" android:id="@id/op_noviceguide" android:title="@string/oneplus_noviceguide">
            <intent android:action="com.oneplus.noviceteaching.NoViceTeachingActivity" />
        </dashboard-tile>
        <dashboard-tile android:icon="@drawable/ic_settings_about" android:id="@id/about_settings" android:title="@string/about_settings" android:fragment="com.oneplus.settings.OPDeviceInfoSettings" />
    </dashboard-category>
</dashboard-categories>