<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AdvSettingsItemSummary" parent="@style/BaseText">
        <item name="android:textSize">@dimen/adv_settings_item_summary_text_size</item>
        <item name="android:textColor">@color/adv_settings_item_summary</item>
    </style>
    <style name="AdvSettingsItemTitle" parent="@style/BaseText">
        <item name="android:textSize">@dimen/adv_settings_item_title_text_size</item>
        <item name="android:textColor">@color/adv_settings_item_title</item>
    </style>
    <style name="AgentWindow" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="BaseText">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="CaptureModesPanelItemText" parent="@style/BaseText">
        <item name="android:textSize">@dimen/capture_modes_panel_item_text</item>
        <item name="android:textColor">@color/capture_modes_panel_title_text</item>
    </style>
    <style name="CountDownTimerText" parent="@style/BaseText">
        <item name="android:textSize">@dimen/count_down_timer_text_size</item>
        <item name="android:textColor">@color/count_down_timer_text</item>
        <item name="android:shadowColor">@color/count_down_timer_text_shadow</item>
        <item name="android:shadowRadius">10.0</item>
    </style>
    <style name="CameraWindow" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="MediaDetailsDialogItemText" parent="@style/BaseText">
        <item name="android:textSize">@dimen/media_details_dialog_item_text_size</item>
        <item name="android:textColor">@color/media_details_dialog_text</item>
    </style>
    <style name="TransparentWindow" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/capture_bar_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="OnScreenHintText" parent="@style/BaseText">
        <item name="android:textSize">@dimen/on_screen_hint_text_size</item>
    </style>
    <style name="OnScreenHintText.Landscape" parent="@style/OnScreenHintText">
        <item name="android:textColor">@color/on_screen_hint_text_land</item>
        <item name="android:shadowColor">@color/on_screen_hint_text_shadow_land</item>
        <item name="android:shadowRadius">5.0</item>
    </style>
    <style name="OnScreenHintText.Portrait" parent="@style/OnScreenHintText">
        <item name="android:textColor">@color/on_screen_hint_text_port</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowRadius">0.0</item>
    </style>
    <style name="OnScreenHintText.Portrait.WithBackground" parent="@style/OnScreenHintText.Portrait">
        <item name="android:textColor">@color/on_screen_hint_text_port_with_background</item>
    </style>
    <style name="OptionsPanelItemText" parent="@style/BaseText">
        <item name="android:textSize">@dimen/options_panel_item_text_size</item>
        <item name="android:textColor">@color/options_panel_item_text</item>
    </style>
    <style name="OptionsPanelItemText.Selected" parent="@style/OptionsPanelItemText">
        <item name="android:textColor">@color/options_panel_item_text_selected</item>
    </style>
    <style name="ProcessingDialogText" parent="@style/BaseText">
        <item name="android:textSize">@dimen/processing_dialog_text_size</item>
        <item name="android:textColor">@color/processing_dialog_text</item>
    </style>
    <style name="AboutText.VersionCopy" parent="@style/BaseText">
        <item name="android:textSize">@dimen/about_text_size</item>
        <item name="android:textColor">@color/version_copyright_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AboutText.Agreement" parent="@style/BaseText">
        <item name="android:textSize">@dimen/about_text_size</item>
        <item name="android:textColor">@color/agreement_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="RecordingTimerText" parent="@style/BaseText">
        <item name="android:textSize">@dimen/recording_timer_text_size</item>
        <item name="android:textColor">@color/recording_timer_text</item>
    </style>
    <style name="ThemeOverlay.SwitchBar" parent="@android:style/ThemeOverlay">
        <item name="android:colorAccent">@color/switch_accent_color</item>
    </style>
    <style name="ManualModeKnobText">
        <item name="android:textSize">@dimen/manual_knob_text_size</item>
        <item name="android:textColor">@color/manual_icon_text</item>
        <item name="android:fontFamily">roboto</item>
    </style>
    <style name="ManualModeKnobTextSelected" parent="@style/ManualModeKnobText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/manual_icon_text_selected</item>
    </style>
    <style name="ManualModeControlTextSelected" parent="@style/ManualModeKnobText">
        <item name="android:textColor">@color/manual_icon_text_selected</item>
    </style>
    <style name="ManualModeIndicatorText" parent="@style/ManualModeKnobText">
        <item name="android:textSize">@dimen/manual_floating_indicator_text_size</item>
        <item name="android:textColor">@color/manual_indicator_text</item>
    </style>
    <style name="UndoBar">
        <item name="android:background">@color/undo_bar_background</item>
    </style>
    <style name="UndoBarTextAppearance" parent="@style/BaseText">
        <item name="android:textSize">@dimen/undo_bar_text</item>
        <item name="android:textColor">@color/undo_bar_text</item>
    </style>
    <style name="UndoBarLightTextAppearance" parent="@style/UndoBarTextAppearance">
        <item name="android:textColor">@color/undo_bar_undo_text</item>
    </style>
    <style name="UndoButton" parent="@style/BaseText">
        <item name="android:textSize">@dimen/undo_bar_text</item>
        <item name="android:textColor">@color/undo_bar_undo_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
</resources>
